<VirtualHost <%= @conf['vhost_addr'] -%>:<%= @conf['vhost_port'] -%>>
    ServerAdmin <%= @conf['server_admin'] %>
    ErrorLog <%= @conf['error_log'] %>
    LogLevel <%= @conf['log_level'] %>

    Alias <%= @conf['alias'] -%> "/usr/share/ganglia-webfrontend"
    <Directory "/usr/share/ganglia-webfrontend">
        Options Indexes MultiViews FollowSymLinks
        AllowOverride None
        <% if @conf['allow_from'] %>
        Order deny,allow
        Deny from all
        Allow from <%= @conf['allow_from'] %>
        <% else %>
        Order allow,deny
        Allow from all
        <% end %>
    </Directory>
</VirtualHost>
